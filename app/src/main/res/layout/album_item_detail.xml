<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/profile_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/profile_textview"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:src="@drawable/sample"
        android:scaleType="fitCenter"
        android:id="@+id/content_imageview"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/favorite_imageview"
            android:src="@drawable/ic_favorite_border"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_gravity="center"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:id="@+id/like_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/comment_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_comment" />
        <TextView
            android:layout_gravity="center"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:id="@+id/comment_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="Explain Content"
        android:id="@+id/explain_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="10dp"
        android:layout_margin="10dp"
        android:id="@+id/date_textview"
        android:text="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</LinearLayout>