<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigation.CommentActivity">

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/profile_imageview"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/writerIdTV"
                android:text="Writer ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="9sp"
                android:id="@+id/ImgUploadTimeTV"
                android:text="Upload Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/content_popup"
            android:src="@drawable/ic_popupmenu"
            android:layout_marginRight="20dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/contentImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sample" />

    <TextView
        android:id="@+id/contentText"
        android:padding="10dp"
        android:text="Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:layout_weight="1"
        android:id="@+id/comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/comment_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_btn"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND" />

    </LinearLayout>

</LinearLayout>